<div class="modal-dialog modal-dialog-centered modal-lg">
  <div class="modal-content">

    <%= link_to :back, class: 'dismiss-modal' do %>
      <i class="fa-solid fa-circle-xmark icon-dismiss"></i>
    <% end %>

    <div class="modal-header">
      <h3>Edit Group</h3>
    </div>

    <div class="modal-body">
      <%= form_with model: group, url: update_group_path(group.id), data: { remote: true }, method: :patch do |f| %>
        <%= render partial: 'form_contents', locals: { f: f, group: group } %>
      <% end %>
    </div>
  </div>
</div>

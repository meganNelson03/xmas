<div class='d-block d-md-none'>
  <section class='header pb-2'>
    <div class='head-content'>
      <h1>
        <div class='d-flex justify-content-center font-weight-bold'>
          My Group
        </div>
      </h1>
    </div>
  </section>
</div>

<div class='d-none d-md-block'>
  <section class='header'>
    <div class='row'>
      <div class='col-12'>
        <h1>My Groups</h1>
      </div>
    </div>
  </section>
</div>

<section class='actions mt-md-5'>
  <%= link_to new_group_path, class: 'pill btn justify-content-center justify-content-md-start align-items-center mx-auto mx-md-0', remote: true do %>
    <i class="fa-solid fa-plus me-3"></i> Create a Group
  <% end %>
   <%= link_to new_group_member_path, class: 'pill btn justify-content-center justify-content-md-start align-items-center mx-auto mx-md-0', remote: true do %>
    <i class="fa-solid fa-plus me-3"></i> Join a Group
  <% end %>
</section>

<% if @groups.present? %>
  <%= render partial: 'group/my_groups', locals: { groups: @groups } %>
<% end %>
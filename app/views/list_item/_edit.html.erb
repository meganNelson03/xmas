<div class="modal-dialog modal-dialog-centered modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <h3>Edit Wish</h3>
    </div>

    <div class="modal-body">
      <%= form_for :list_item, url: update_list_item_path(list_item.id), method: :patch, remote: true do |f| %>
        <%= render partial: 'form_contents', locals: { f: f, list_item: list_item } %>
      <% end %>
    </div>
  </div>
</div>

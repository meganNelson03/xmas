<div class="modal-dialog modal-dialog-centered modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <%= if action_name == 'new' %>
        <h3>Add to My List</h3>
      
    </div>

    <% if success %>
      <div class='success'>
        Made a wish!
      </div>
    <% end %>

    <div class="modal-body">
      <%= form_for :list_item, url: create_list_item_path, remote: true do |f| %>
        <div class='row'>
          <div class='col-12 mb-3'>
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control', value: list_item.description %> 
            <%= render_errors(list_item, :description) %>
          </div>
          <div class='col-12 mb-3'>
            <%= f.label 'Item URL' %>
            <%= f.text_field :url, class: 'form-control', value: list_item.url %>
            <%= render_errors(list_item, :url) %> 
          </div>
          <div class='col-12 mb-3'>
            <%= f.label :price %>
            <%= f.number_field :price, step: :any, class: 'form-control', value: list_item.price %>
            <%= render_errors(list_item, :price) %> 
          </div>
          <div class='col-12 mb-5'>
            <%= f.label 'How much do you want this?' %>  
            <%= f.select :priority, options_for_select(priority_options), {}, class: 'form-select', value: list_item.priority %>
            <%= render_errors(list_item, :priority) %>
          </div>
          <%= f.hidden_field :list_id, value: @current_account.list.id %>
          <div class='col-12 d-flex justify-content-between'>
            <button class="btn btn-default cancel" data-dismiss="modal" aria-hidden="true">Cancel</button>
            <%= f.submit 'Submit', class: 'btn submit' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>

.success {
  position: absolute;
  right: 0;
  top: -40px;
  background: #9cdba6;
  color: green;
  font-weight: 600;
  border-radius: 5px;
  padding: .25rem 2rem;
  animation: successful 0.4s forwards;
}

@keyframes successful {
  from {
    top: -40px;
  }
  to {
    top: -60px;
  }
}

textarea {
  height: 100px;
}

.cancel {
  border: 2px solid #c62e2e;
  color: #c62e2e;
  font-weight: 600;
}

.submit {
  background-color: #9cdba6;
    color: green;
    font-weight: 600;
  border-radius: 10px;
}

.modal form label {
  font-size: 1rem;
}

.modal-content {
  border: none;
  border-radius: 15px;
}

.modal-body {
  padding: 1rem 2rem 2rem 2rem;
}

.modal-header {
  padding: 2rem 2rem 1rem 2rem;
  border: none;
  display: flex;
  justify-content: center;
}

</style>
<div class='row'>
  <div class='col-12 mb-3'>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', value: list_item.description %> 
    <%= render_errors(list_item, :description) %>
  </div>
  <div class='col-12 mb-3'>
    <%= f.label 'Item URL' %>
    <%= f.text_field :url, class: 'form-control', value: list_item.url %>
    <%= render_errors(list_item, :url) %> 
  </div>
  <div class='col-12 mb-3 row'>
    <%= f.label 'Price Range' %>
    <div class='col-6'>
      <%= f.number_field :low_price, step: :any, placeholder: 'Low Price', class: 'form-control', value: list_item.low_price %>
    </div>
    <div class='col-6'>
      <%= f.number_field :high_price, step: :any, placeholder: 'High Price', class: 'form-control', value: list_item.high_price %>
    </div>
    <%= render_errors(list_item, :cost) %> 
  </div>
  <div class='col-12 mb-5'>
    <%= f.label 'How much do you want this?' %>  
    <%= f.select :priority, options_for_select(priority_options, action_name == 'new' ? nil : list_item.priority), { include_blank: true }, class: 'form-select' %>
    <%= render_errors(list_item, :priority) %>
  </div>
  <%= f.hidden_field :list_id, value: @current_account.list.id %>
  <div class='col-12 d-flex justify-content-between'>
    <%= link_to :back do %>
    <button class="btn btn-default cancel" data-bs-dismiss="modal" aria-hidden="true">Cancel</button>
    <% end %>
    <%= f.submit 'Submit', class: 'btn submit' %>
  </div>
</div>
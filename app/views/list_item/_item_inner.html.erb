<% if item.owned_by?(current_account) %>
  <%= render partial: 'list_item/item_contents/my_item_inner', locals: { item: item } %>
<% elsif item.created_by?(current_account) %>
  <%= render partial: 'list_item/item_contents/editable_item_inner', locals: { item: item } %>
<% else %>
  <%= render partial: 'list_item/item_contents/other_item_inner', locals: { item: item } %>
<% end %>


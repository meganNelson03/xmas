<div class="item-box brick col-3" data-controller='claim' data-claim-hover-class='item-hover' data-claim-hover-out-class='item-hover-out' data-claim-target='item'>
  <div class='item' id='item-<%= item.id %>'>
    <div class="preheader">
      <span class='name'><%= item.list.account.full_name %></span>
      <span>
        <% if item.needed? %>
          <span data-toggle='tooltip' placement='top' title='Most Wanted'>
            <i class="fa-solid fa-fire icon-hot-item" ></i>
            <i class="fa-solid fa-fire me-2 icon-hot-item" ></i>
          </span>
        <% elsif item.loved? %>
          <span data-toggle='tooltip' placement='top' title='Kinda Wanted'>
            <i class="fa-solid fa-fire me-2 icon-med-hot-item" ></i>
          </span>
        <% end %>
        <%= link_to item.url, class: 'item-link', data: { toggle: 'tooltip', placement: 'top'}, title: 'Gift URL' do %>
          <i class="fa-solid fa-link icon"></i>
        <% end %>
      </span>
    </div>
    <div class="head">
      <p><%= item.description %></p>
    </div>
    <div class="body">
      <%= render partial: 'list_item/price', locals: { item: item } %>
    </div>
  
    <%= form_for :list_item, url: destroy_list_item_path(item.id), method: :delete, class: 'delete-item-form' do |f| %>
      <%= f.button :submit, class: 'action delete-item' do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
      <%= link_to edit_list_item_path(item.id), class: 'action edit-item', remote: true do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    <% end %>
  </div>
</div>


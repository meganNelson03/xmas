<div class="modal-dialog modal-dialog-centered modal-lg">
  <div class="modal-content">

    <%= link_to :back, class: 'dismiss-modal' do %>
      <i class="fa-solid fa-circle-xmark icon-dismiss"></i>
    <% end %>

    <div class="modal-header">
      <h3>Add Wish</h3>
    </div>

    <div class='d-none d-md-block'>
      <% if success %>
        <div class='success'>
          Made a wish!
        </div>
      <% end %>
    </div>

    <div class='d-block d-md-none'>
      <% if success %>
        <%= render partial: 'list_item/mobile/success_message', locals: { message: 'You made a wish!' } %>
      <% end %>
    </div>

    <div class="modal-body">
      <%= form_for :list_item, url: create_list_item_path, remote: true do |f| %>
        <%= render partial: 'form_contents', locals: { f: f, list_item: list_item } %>
      <% end %>
    </div>
  </div>
</div>

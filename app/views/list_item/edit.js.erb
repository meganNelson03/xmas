$("#modal-container .modal-content").html("<%= escape_javascript(render partial: 'list_item/edit', locals: { list_item: list_item }) %>")

$('.multiselect-field').select2({ width: 'resolve'});

$(document).on("keydown", ":input:not(textarea):not(:submit)", function(event) {
  if (event.key == "Enter") {
    event.preventDefault();
  }
});

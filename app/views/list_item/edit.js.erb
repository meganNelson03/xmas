$('#modal-container').html("<%= escape_javascript(render partial: 'layouts/modal/modal_contents', locals: { 
    modal_id: list_item.id, 
    modal_partial: 'list_item/edit', 
    modal_partial_locals: { list_item: list_item }}) %>")
$("#modal-item-<%= escape_javascript(list_item.id) %>.modal").modal('show')

$('.multiselect-field').select2({ width: 'resolve'});

$(document).on("keydown", ":input:not(textarea):not(:submit)", function(event) {
  if (event.key == "Enter") {
    event.preventDefault();
  }
});

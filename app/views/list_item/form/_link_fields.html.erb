<div class="nested-form-wrapper" data-new-record="<%= f.object.present? && f.object.new_record? %>">
  
  <div class='field-wrapper mb-0 mb-md-3'>
    <%= f.text_field :url, class: 'form-control mb-2 mb-md-0', placeholder: 'Additional URL' %>
    <button type="button" class='delete-link' data-action="nested-form#remove">
      <i class="fa-regular fa-trash-can"></i>
    </button>
  </div>

  <%= f.hidden_field :_destroy %>
</div>

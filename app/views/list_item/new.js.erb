$('#modal-container').html("<%= escape_javascript(render partial: 'layouts/modal/modal_contents', locals: { 
    modal_id: 'new', 
    modal_partial: 'list_item/new', 
    modal_partial_locals: { list_item: list_item, success: local_assigns.fetch(:success, false) }}) %>")
$("#modal-item-new.modal").modal('show')

$('.multiselect-field').select2({ width: 'resolve'});

$(document).on("keydown", ":input:not(textarea):not(:submit)", function(event) {
  if (event.key == "Enter") {
    event.preventDefault();
  }
});

$('.dismiss-modal, .cancel-modal').on('click', function() {
  $('#modal-item-new.modal').modal('hide');
})